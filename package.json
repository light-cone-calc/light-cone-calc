{
  "name": "light-cone-calc",
  "version": "1.8.0",
  "description": "Cosmological calculations for the expansion of the universe",
  "files": [
    "dist"
  ],
  "browser": "dist/light-cone-calc.min.js",
  "scripts": {
    "build": "rimraf dist && rollup -c && npm run test:dist",
    "ci": "npm run lint && npm run test:unit && npm run build",
    "lint": "prettier . --check && eslint .",
    "lint:fix": "prettier . --write && eslint . --fix",
    "test": "npm run lint:fix && npm run test:unit",
    "test:dist": "cross-env TS_NODE_COMPILER_OPTIONS=\"{ \\\"module\\\": \\\"commonjs\\\" }\" mocha -r ts-node/register test/dist/**/*.spec.ts",
    "test:unit": "cross-env TS_NODE_COMPILER_OPTIONS=\"{ \\\"module\\\": \\\"commonjs\\\" }\" mocha -r ts-node/register test/unit/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lightcone7/light-cone-calc.git"
  },
  "keywords": [
    "light cone",
    "calculator",
    "lcdm",
    "physics"
  ],
  "author": "https://github.com/lightcone7/",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lightcone7/light-cone-calc/issues"
  },
  "homepage": "https://github.com/lightcone7/light-cone-calc#readme",
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "camelcase": "^6.3.0",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.15.0",
    "eslint-plugin-mocha": "^10.0.4",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.73.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^10.7.0",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@rec-math/math": "^1.1.0"
  }
}
