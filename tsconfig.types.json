{
  "include": ["src/index.ts"],
  "compilerOptions": {
    "outDir": "types",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true
  }
}
